<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cinema.read_api.mapper.ReadArrangementMapper">

    <select id="selectList" resultType="Arrangement">
        select *
        from cinema.t_arrangement
    </select>

    <select id="selectListByFid" parameterType="Integer" resultType="Arrangement">
        select *
        from cinema.t_arrangement
        where fid = #{fid}
    </select>

    <select id="selectById" parameterType="Integer" resultType="Arrangement">
        select *
        from cinema.t_arrangement
        where id = #{id}
    </select>

</mapper>