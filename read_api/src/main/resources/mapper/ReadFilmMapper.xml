<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cinema.read_api.mapper.ReadFilmMapper">

    <select id="selectById" parameterType="Integer" resultType="Film">
        select *
        from cinema.t_film
        where id = #{id}
    </select>

    <select id="selectListByMap" parameterType="Map" resultType="Film">
        select *
        from cinema.t_film
        <where>
            <choose>
                <when test="region!=null and type!=null ">
                    region = #{region} and type = #{type}
                </when>

                <when test="region!=null">
                    region = #{region}
                </when>

                <when test="type !=null">
                    type = #{type}
                </when>

                <when test="name!=null">
                    name like "%" #{name} "%"
                </when>

            </choose>

        </where>

        <if test="limit!=null">
            order by hot desc
            limit #{limit}
        </if>
    </select>
</mapper>