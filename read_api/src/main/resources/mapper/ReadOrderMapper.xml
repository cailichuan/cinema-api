<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cinema.read_api.mapper.ReadOrderMapper">

    <select id="selectListByAid" parameterType="Long" resultType="Order">
        select *
        from cinema.t_order
        where aid = #{aid}

    </select>

    <select id="selectListByMap" parameterType="Map" resultType="Order">
        select *
        from cinema.t_order
        <where>
            <choose>
                <when test="aid!=null">
                    aid = #{aid}
                </when>
                <when test="uid!=null">
                    uid = #{uid}
                </when>
            </choose>
        </where>
    </select>
</mapper>